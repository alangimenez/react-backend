html
    head 
        title="Desafio con PUG"
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")

    body 
        div(class="container" style="text-align: center;")
            h1="Catalogo de libros"
            button(class="btn btn-dark")
                a(href="/" style="text-decoration: none; color: white")="Ir a formulario de carga"
            div(style="display: flex; flex-wrap: wrap; justify-content: center")
                each val in listaDeProductos
                    div(class="card" style="width: 18rem; margin: 1rem")
                        img(src=val.href class="card-img-top" alt="...")
                        div(class="card-body" style="text-align: center;")
                            h5(class="card-title")=val.name
                            h6(class="card-text")=val.autor
                            p=val.categoria
                            h1
                                span(class="badge bg-secondary")=val.precio